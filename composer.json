{
    "name": "devuri/wp-esl-connect-server",
    "type": "wordpress-plugin",
    "license": "GPL-2.0-only",
    "description": "Server-side plan enforcement for Easy Software License",
    "authors": [
        {
            "name": "Uriel",
            "email": "support@urielwilson.com",
            "homepage": "https://urielwilson.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.0 || ^8.1",
        "ext-curl": "*",
        "ext-json": "*"
    },
    "require-dev": {
        "10up/phpcs-composer": "dev-master",
        "ergebnis/composer-normalize": "^2.42",
        "fakerphp/faker": "^1.23",
        "phpstan/phpstan": "^1.10",
        "symfony/var-dumper": "^5.4",
        "szepeviktor/phpstan-wordpress": "^1.3",
        "vimeo/psalm": "^5.25",
        "yoast/phpunit-polyfills": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "EslConnectServer\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "build": [
            "composer install -q",
            "composer test",
            "composer lint",
            "composer install -q",
            "composer lint",
            "composer install --no-dev -q",
            "bin/zipit copy",
            "bin/zipit"
        ],
        "codefix": [
            "composer php-cs-fixer",
            "composer install --no-dev"
        ],
        "php-cs-fixer": [
            "composer require --dev friendsofphp/php-cs-fixer 3.23.0",
            "vendor/bin/php-cs-fixer fix -vvv",
            "composer remove --dev friendsofphp/php-cs-fixer",
            "composer install --no-dev"
        ],
        "phpstan": [
            "composer install",
            "@php ./vendor/bin/phpstan analyse"
        ],
        "lint": [
            "composer install -q",
            "composer php-compat",
            "composer phpstan",
            "composer psalm-secure",
            "composer psalm",
            "composer install --no-dev -q"
        ],
        "psalm": "vendor/bin/psalm",
        "psalm-autofix": [
            "composer install -q",
            "vendor/bin/psalm --alter --issues=InvalidNullableReturnType,MismatchingDocblockReturnType,InvalidReturnType,InvalidFalsableReturnType,LessSpecificReturnType,MissingParamType"
        ],
        "php-compat": [
            "composer install",
            "vendor/bin/phpcs esl-connect-server.php src/ --standard=PHPCompatibilityWP --extensions=php --runtime-set testVersion 7.4-"
        ],
        "psalm-info": "vendor/bin/psalm --show-info=true",
        "psalm-secure": "vendor/bin/psalm --taint-analysis",
        "test": [
            "composer install -q",
            "vendor/bin/phpunit",
            "composer install --no-dev -q"
        ],
        "test-covers": [
            "@putenv XDEBUG_MODE=coverage",
            "composer install -q",
            "vendor/bin/phpunit --coverage-html coverage-report"
        ]
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true
        },
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
